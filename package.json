{
  "name": "termenv",
  "version": "0.4.2",
  "description": "Terminal Environment Utilities",
  "type": "module",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@10.12.4",
  "license": "MIT",
  "homepage": "https://github.com/luxass/termenv",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxass/termenv.git"
  },
  "bugs": {
    "url": "https://github.com/luxass/termenv/issues"
  },
  "keywords": [
    "color",
    "colour",
    "colors",
    "terminal",
    "console",
    "ansi",
    "tty",
    "support",
    "supports",
    "farver"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./supports": {
      "import": "./dist/supports.js",
      "require": "./dist/supports.cjs"
    },
    "./unicode": {
      "import": "./dist/unicode.js",
      "require": "./dist/unicode.cjs"
    },
    "./utils": {
      "import": "./dist/utils.js",
      "require": "./dist/utils.cjs"
    },
    "./window-size": {
      "import": "./dist/window-size.js",
      "require": "./dist/window-size.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint . --report-unused-disable-directives",
    "test": "vitest --run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@luxass/eslint-config": "^4.16.0",
    "@types/node": "^22.9.0",
    "eslint": "^9.22.0",
    "eslint-plugin-format": "^1.0.1",
    "publint": "^0.3.12",
    "tsdown": "^0.12.9",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  }
}
