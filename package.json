{
  "name": "termenv",
  "version": "1.0.3",
  "description": "Terminal Environment Utilities",
  "type": "module",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@10.28.2",
  "license": "MIT",
  "homepage": "https://github.com/luxass/termenv",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxass/termenv.git"
  },
  "bugs": {
    "url": "https://github.com/luxass/termenv/issues"
  },
  "keywords": [
    "terminal",
    "environment",
    "detection",
    "color",
    "ansi",
    "tty",
    "cli",
    "color-support",
    "truecolor",
    "hyperlinks",
    "unicode"
  ],
  "exports": {
    ".": "./dist/index.mjs",
    "./supports": "./dist/supports.mjs",
    "./utils": "./dist/utils.mjs",
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint .",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:bun": "bun test ./test-bun",
    "test:deno": "deno test --allow-env",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@luxass/eslint-config": "7.0.0-beta.3",
    "@types/bun": "1.3.8",
    "@types/node": "24.10.9",
    "@vitest/browser": "4.0.18",
    "@vitest/browser-playwright": "4.0.18",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "9.39.2",
    "eslint-plugin-format": "1.3.1",
    "playwright": "1.58.1",
    "publint": "0.3.17",
    "tsdown": "0.20.1",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
