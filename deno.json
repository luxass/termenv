{
  "test": {
    "include": [
      "test-deno/**/*.test.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  },
  "compilerOptions": {
    "lib": [
      "ES2022"
    ],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true
  },
  "unstable": [
    "sloppy-imports"
  ],
  "imports": {
    "@std/expect": "jsr:@std/expect@^0.224.0",
    "@std/assert": "jsr:@std/assert@^0.224.0",
    "@std/testing": "jsr:@std/testing@^0.224.0"
  }
}
