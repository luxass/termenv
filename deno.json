{
  "name": "@luxass/termenv",
  "version": "1.0.2",
  "exports": {
    ".": "./src/index.ts",
    "./utils": "./src/utils.ts",
    "./supports": "./src/supports.ts"
  },
  "lint": {
    "rules": {
      "exclude": ["no-sloppy-imports"]
    }
  },
  "test": {
    "include": [
      "test-deno/**/*.test.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  },
  "compilerOptions": {
    "lib": [
      "ES2022"
    ],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true
  },
  "unstable": [
    "sloppy-imports"
  ],
  "imports": {
    "@std/expect": "jsr:@std/expect@^1.0.4",
    "@std/assert": "jsr:@std/assert@^1.0.4",
    "@std/testing": "jsr:@std/testing@^1.0.4"
  },
  "publish": {
    "exclude": [
      "tsdown.config.ts",
      "eslint.config.js",
      "pnpm-lock.yaml",
      ".github/**",
      "scripts/**",
      "test/**",
      "test-deno/**",
      "test-bun/**",
      "tsconfig.json"
    ]
  }
}
